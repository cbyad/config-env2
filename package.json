{
  "name": "env2",
  "version": "0.0.1",
  "description": "A tiny lib to validate env file at runtime",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "tsc && node dist/index.js",
    "test": "jest",
    "coverage": "jest --coverage",
    "dev": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cbyad/env2.git"
  },
  "keywords": [],
  "author": "yannick (cbyad)",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^8.1.0",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "fp-ts": "^2.9.5",
    "io-ts": "^2.2.15",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.6.2",
    "jest": "^26.6.0",
    "nodemon": "^2.0.6",
    "ts-jest": "^26.4.1",
    "typescript": "^4.2.3"
  },
  "nodemonConfig": {
    "watch": [
      "index.ts",
      "./src/**/*.ts",
      "./core/src/**/*.ts"
    ],
    "ext": "ts",
    "ignore": [
      "./src/**/*.spec.ts"
    ],
    "exec": "tsc && node dist/index.js"
  }
}
